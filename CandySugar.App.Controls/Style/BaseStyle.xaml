<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="CandySugar.App.Controls.Style.BaseStyle"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Converter="clr-namespace:CandySugar.App.Controls.Converters"
    xmlns:Sys="clr-namespace:System;assembly=mscorlib">

    <OnPlatform x:Key="FontAwesomeBrands" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontAwesome6Brands.otf#Regular" />
    </OnPlatform>
    <OnPlatform x:Key="FontAwesomeSolid" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontAwesome6Solid.otf#Regular" />
    </OnPlatform>
    <OnPlatform x:Key="FontAwesomeRegular" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontAwesome6Regular.otf#Regular" />
    </OnPlatform>
    <OnPlatform x:Key="FontAwesomeThin" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontAwesome6Thin.otf#Thin" />
    </OnPlatform>

    <Converter:ComboConverter x:Key="ComboConverter" />
    <Converter:TabItemConverter x:Key="TabItemConverter" />
    <Converter:ListViewConverter x:Key="ListViewConverter" />
    <Converter:BytesConverter x:Key="BytesConverter" />
    <Converter:BoolConverter x:Key="BoolConverter" />
    <Converter:ListConverter x:Key="ListConverter" />
    <Converter:VisibleConverter x:Key="VisibleConverter" />
</ResourceDictionary>